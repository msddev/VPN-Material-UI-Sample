<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.VpnNewDesign" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/blue_dark_500</item>
        <item name="colorPrimaryVariant">@color/blue_dark_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="android:colorBackground">?attr/colorPrimaryVariant</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="toolbarStyle">@style/Widget.MyApp.Toolbar</item>

        <!-- Toolbar color -->
        <item name="colorSurface">?attr/colorPrimaryVariant</item>
        <item name="primary_text_color">@color/white</item>
        <item name="secondary_text_color">@color/color_green_light</item>

        <item name="textInputStyle">@style/Widget.MyApp.MyTextInputLayout</item>
        <item name="sliderStyle">@style/Widget.App.Slider</item>
    </style>

</resources>