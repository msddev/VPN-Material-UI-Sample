<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.VpnNewDesign" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/white_smoke</item>
        <item name="colorPrimaryVariant">@color/white</item>
        <item name="colorOnPrimary">@color/blue_dark_500</item>
        <item name="android:colorBackground">?attr/colorPrimaryVariant</item>
        <item name="android:windowBackground">?attr/colorPrimaryVariant</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/color_blue_light</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/blue_dark_700</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <item name="android:windowLightStatusBar" tools:targetApi="23">true</item>
        <!-- Customize your theme here. -->
        <item name="toolbarStyle">@style/Widget.MyApp.Toolbar</item>
        <item name="textInputStyle">@style/Widget.MyApp.MyTextInputLayout</item>
        <item name="sliderStyle">@style/Widget.App.Slider</item>

        <!-- Colors -->
        <item name="primary_text_color">@color/darkGray</item>
        <item name="secondary_text_color">@color/lowDarkGray</item>
    </style>
</resources>